		<menu id="monitor-control" label="Monitor Control">
			<item label="Disable eDP-1">
				<action name="Execute">
					<execute>xrandr --output eDP-1 --off</execute>
				</action>
			</item>
			<item label="Enable eDP-1">
				<action name="Execute">
					<execute>xrandr --output eDP-1 --auto</execute>
				</action>
			</item>
			<item label="Disable DP-1">
				<action name="Execute">
					<execute>xrandr --output DP-1 --off</execute>
				</action>
			</item>
			<item label="Enable DP-1">
				<action name="Execute">
					<execute>xrandr --output DP-1 --auto</execute>
				</action>
			</item>
		</menu>

		<item label="Exit">
