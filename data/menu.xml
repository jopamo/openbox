<?xml version="1.0" encoding="utf-8"?>
<openbox_menu
	xmlns="http://openbox.org/">
	<menu id="root-menu" label="Openbox 3">
		<item label="lxterminal">
			<action name="Execute">
				<execute>lxterminal</execute>
			</action>
		</item>
		<item label="qterminal">
			<action name="Execute">
				<execute>qterminal</execute>
			</action>
		</item>
		<item label="vte-2.91">
			<action name="Execute">
				<execute>vte-2.91 --use-theme-colors --background-color='#000000' -T 50</execute>
			</action>
		</item>
		<item label="st">
			<action name="Execute">
				<execute>st</execute>
			</action>
		</item>
		<item label="firefox-nightly-bin">
			<action name="Execute">
				<execute>firefox-nightly-bin</execute>
			</action>
		</item>
		<item label="brave-nightly-bin">
			<action name="Execute">
				<execute>brave-nightly-bin</execute>
			</action>
		</item>
		<item label="chromium-bin">
			<action name="Execute">
				<execute>chromium-bin</execute>
			</action>
		</item>
		<item label="google-chrome-unstable">
			<action name="Execute">
				<execute>google-chrome-unstable</execute>
			</action>
		</item>
		<item label="pcmanfm">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<item label="pcmanfm-qt">
			<action name="Execute">
				<execute>pcmanfm-qt</execute>
			</action>
		</item>
		<item label="lxqt-config">
			<action name="Execute">
				<execute>lxqt-config</execute>
			</action>
		</item>
		<item label="featherpad">
			<action name="Execute">
				<execute>featherpad</execute>
			</action>
		</item>
		<item label="keepassxc">
			<action name="Execute">
				<execute>env QT_STYLE_OVERRIDE=Adwaita-Dark keepassxc</execute>
			</action>
		</item>
		<item label="wireshark">
			<action name="Execute">
				<execute>env QT_STYLE_OVERRIDE=Adwaita-Dark wireshark</execute>
			</action>
		</item>
		<item label="qalculate-gtk">
			<action name="Execute">
				<execute>qalculate-gtk</execute>
			</action>
		</item>
		<item label="qbittorrent">
			<action name="Execute">
				<execute>qbittorrent</execute>
			</action>
		</item>
		<item label="pavucontrol-qt">
			<action name="Execute">
				<execute>pavucontrol-qt</execute>
			</action>
		</item>
		<item label="flameshot">
			<action name="Execute">
				<execute>flameshot</execute>
			</action>
		</item>
		<item label="texxy">
			<action name="Execute">
				<execute>texxy</execute>
			</action>
		</item>
		<item label="1term">
			<action name="Execute">
				<execute>1term</execute>
			</action>
		</item>
		<separator/>
		<menu id="preferences" label="Preferences">
			<item label="Reconfigure">
				<action name="Reconfigure"/>
			</item>
			<item label="Restart">
				<action name="Restart"/>
			</item>
		</menu>
		<menu id="monitor-control" label="Monitor Control">
			<item label="Disable eDP-1">
				<action name="Execute">
					<execute>xrandr --output eDP-1 --off</execute>
				</action>
			</item>
			<item label="Enable eDP-1">
				<action name="Execute">
					<execute>xrandr --output eDP-1 --auto</execute>
				</action>
			</item>
			<item label="Disable DP-1">
				<action name="Execute">
					<execute>xrandr --output DP-1 --off</execute>
				</action>
			</item>
			<item label="Enable DP-1">
				<action name="Execute">
					<execute>xrandr --output DP-1 --auto</execute>
				</action>
			</item>
		</menu>
		<item label="Exit">
			<action name="Execute">
				<execute>openbox --exit</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
